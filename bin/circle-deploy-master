#!/bin/bash

set -e

source "$(dirname "$(readlink -f "$0")")/circle-functions"

source "$STATE"

if [ -z "$SKIP_TESTS" ] ; then
    docker login -e $DOCKER_EMAIL -u $DOCKER_USER -p $DOCKER_PASS
    cd $SRCDIR
    make clean-bin
    make publish
fi

install_wordepress v1.0.0

cd $SRCDIR
bin/publish-site "$WP_DEV_URL" "$WP_DEV_USER" "$WP_DEV_PASSWORD"
